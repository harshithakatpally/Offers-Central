<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:id="@+id/verifyUserName"
        android:layout_alignBottom="@+id/welcome"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email id : "
        android:textSize="17dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="46dp"
        android:textColor="#000000"
        android:id="@+id/emailVerifyMessage"
        android:layout_below="@+id/welcome" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/emailVerifyMessage"
        android:src="@drawable/ic_report_problem_red_500_24dp"
        android:layout_alignBottom="@+id/emailVerifyMessage"
        android:id="@+id/emailVerifyIcon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile :"
        android:layout_alignLeft="@+id/emailVerifyMessage"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:id="@+id/mobileVerifyMessage"
        android:layout_below="@+id/emailVerifyMessage"
        />

    <ImageView
        android:id="@+id/mobileVerifyIcon"
        android:layout_width="30dp"
        android:layout_marginLeft="10dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/mobileVerifyMessage"
        android:src="@drawable/ic_report_problem_red_500_24dp"
        android:layout_alignBottom="@+id/mobileVerifyMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/continueButton"
        android:layout_below="@id/mobileVerifyMessage"
        android:layout_marginTop="100dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>